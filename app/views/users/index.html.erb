<!-- Administration can list all users and deactivate and activate them -->
<h1>All users</h1>
<% if current_user.admin? %>
    <%= will_paginate @users %>
      <ul class="users">
        <% @users.each do |user| %>
          <% if current_user.id != user.id %>
            <li>user:
            <%= link_to user.userName, user %>



              <% if user.active == true %>status: Active
                <%= link_to "Deactivate", :action => 'deactive', :id => user.id %>
              <% end %>

              <% if user.active == false %>statusï¼šDeactive
                <%= link_to "Activate", :action => 'deactive' , :id => user.id %>
              <% end %>

              <% if current_user.admin? && !current_user?(user) %>
                <%= link_to "Delete", user, method: :delete, confirm: "Are you sure?"  %>
              <% end %>              

            
           </li>
          <% end %>
        <% end %>
      </ul>
    <%= will_paginate @users %>
<% end %>