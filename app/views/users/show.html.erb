<!-- User can view own all profile information
administration can view anyone's information -->
  <div class="container">
    <div class="row">
        <div class="span4">
              <h2>User:  </h2>
        </div>
        <div class="span4" >
            <h2><%= @user.userName %> </h2>
        </div>
    </div>


    <div class="row">
        <div class="span4">
          <h2>Address:  </h2>
        </div>
        <div class="span4" >
          <h2><%= @user.address %> </h2>
        </div>
    </div>
    <div class="row">
        <div class="span4">
          <h2>Birthdate:  </h2>
        </div>
        <div class="span4" >
          <h2> <%= @user.birthdate %> </h2>
        </div>
    </div>
    <div class="row">
        <div class="span4">
          <h2>Credit Card Number :  </h2>
        </div>
        <div class="span4" >
          <h2><%= "XXXX-XXXX-XXXX-#{@user.card_number.to_s.length <= 4 ? @user.card_number : @user.card_number.to_s.slice(-4..-1) }" %> </h2>
        </div>
    </div>
    <div class="row">
        <div class="span4">
          <h2>Expiration Date:  </h2>
        </div>
        <div class="span4" >
          <h2><%= @user.expiration_date %> </h2>
        </div>
     </div>

   <div class="row">
       <div class="span4">
        <h2><%= link_to "Edit Profile", edit_user_path %> </h2>
       </div>
        <%if current_user.admin%>
           <div class="span4">
            <h2><%= link_to "Delete User", @user, method: :delete, confirm: "Are you sure?"  %></h2>
          </div>
        <% end %>
   </div>


  </div>



<hr>
    <h2> Posted Items </h2>
   <% for item in @items %>
      <%= link_to item.name, item %>
  <% end %>

<hr>
  <h2> User's average rating </h2>
  <%= ratings_for @user,  :static, :dimension => :rating %>