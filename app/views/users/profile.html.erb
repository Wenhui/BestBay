<!-- regular user can view other user's profile which only contains basic information -->
   <div class="container">
    <div class="row">
        <div class="span4">
              <h2>User Name:  </h2>
        </div>
        <div class="span4" >
            <h2><%= @user.userName %> </h2>
        </div>
    </div>

    <div class="row">
        <div class="span4">
              <h2>User Email:  </h2>
        </div>
        <div class="span4" >
            <h2><%= @user.email %> </h2>
        </div>
    </div>

  </div>


<hr>
   <% for item in @user.items %>
      <%= link_to item.name, item %>
  <% end %>

<hr>
  <h2> User's average rating </h2>
  <%= ratings_for @user,  :static, :dimension => :rating %>